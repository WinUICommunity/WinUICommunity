                                            <LinearDoubleKeyFrame KeyTime="0:0:1.100"
                                                                  Value="1" />
                                            <LinearDoubleKeyFrame KeyTime="0:0:1.600"
                                                                  Value="0" />
                                        </DoubleAnimationUsingKeyFrames>
