<ResourceDictionary x:Class="WinUICommunity.InternalAutoSuggestBoxItemTemplate"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="using:WinUICommunity">
    <DataTemplate x:Key="InternalAutoSuggestBoxItemTemplate"
                  x:DataType="local:DataItem">
        <Grid ColumnSpacing="12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Viewbox Width="16"
                     Height="16"
                     VerticalAlignment="Center">
                <Image Source="{x:Bind ImagePath}" />
            </Viewbox>
            <TextBlock Grid.Column="1"
                       Text="{x:Bind Title}" />
        </Grid>
    </DataTemplate>
</ResourceDictionary>
