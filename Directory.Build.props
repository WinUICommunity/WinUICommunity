<Project>
  <PropertyGroup Condition="'$(MSBuildProjectName)' != 'DemoApp'">
    <TargetFrameworks>net6.0-windows10.0.17763.0;net6.0-windows10.0.19041.0;net7.0-windows10.0.17763.0;net7.0-windows10.0.19041.0;net8.0-windows10.0.17763.0;net8.0-windows10.0.19041.0</TargetFrameworks>
    <TargetPlatformMinVersion>10.0.17763.0</TargetPlatformMinVersion>
    <RuntimeIdentifiers>win-x86;win-x64</RuntimeIdentifiers>
    <UseWinUI>true</UseWinUI>
    <ImplicitUsings>true</ImplicitUsings>
    <LangVersion>Latest</LangVersion>
    
    <OutputPath Condition="'$(MSBuildProjectName)' == 'WindowUI' Or '$(MSBuildProjectName)' == 'WindowUI.Core' Or '$(MSBuildProjectName)' == 'WindowUI.LandingPages' Or '$(MSBuildProjectName)' == 'WindowUI.ContextMenuExtensions'">$(SolutionDir)output\$(MSBuildProjectName)\</OutputPath>

    <!-- The NuGet package options -->
    <PackageIcon>icon.png</PackageIcon>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <Authors>WindowUIOrg</Authors>
    <GeneratePackageOnBuild>False</GeneratePackageOnBuild>
    <Copyright>Copyright (c) 2021-2023 Mahdi Hosseini</Copyright>
    <PackageProjectUrl>https://github.com/WindowUIOrg/WindowUI</PackageProjectUrl>
    <RepositoryUrl>https://github.com/WindowUIOrg/WindowUI</RepositoryUrl>
    <PackageReleaseNotes>https://github.com/WindowUIOrg/WindowUI/releases</PackageReleaseNotes>
  </PropertyGroup>
  <PropertyGroup Condition="'$(TargetFramework.StartsWith(net7.0))' == 'true' Or '$(TargetFramework.StartsWith(net6.0))' == 'true'">
    <RuntimeIdentifiers>win10-x86;win10-x64</RuntimeIdentifiers>
  </PropertyGroup>
  
  <!-- The NuGet versions of dependencies to build against. -->
  <ItemGroup>
    <PackageReference Include="Microsoft.WindowsAppSDK" Version="1.4.231115000" />
    <PackageReference Include="Microsoft.Windows.SDK.BuildTools" Version="10.0.22621.2428" />
  </ItemGroup>
  
  <ItemGroup Condition="'$(MSBuildProjectName)' != 'DemoApp'">
    <None Include="Assets\icon.png" Pack="true" PackagePath="" />
    <None Include="..\..\LICENSE" Pack="true" PackagePath="" />
    <None Include="README.md" Pack="true" PackagePath="" />
  </ItemGroup>
</Project>
