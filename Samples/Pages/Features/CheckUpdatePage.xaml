<Page x:Class="WindowUI.DemoApp.Pages.CheckUpdatePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:wui="using:WindowUI">
    <wui:SettingsPageControl IsTabStop="False"
                             ModuleDescription="you can use UpdateHelper for checking application updates from github release page."
                             ModuleImageSource="ms-appx:///Assets/Modules/PT.png"
                             ModuleTitle="UpdateHelper">
        <wui:SettingsPageControl.ModuleContent>
            <StackPanel ChildrenTransitions="{StaticResource SettingsCardsAnimations}"
                        Spacing="10">
                <InfoBar Title="First you must create a new release tag in github repository, tag version must be in this format : 1.0.0.0 now we can check for update with github username and github repository"
                         IsClosable="False"
                         IsOpen="True"
                         Severity="Warning" />
                <Button HorizontalAlignment="Center"
                        Click="Button_Click"
                        Content="Check for Update" />
                <TextBox Name="txtUser"
                         PlaceholderText="Github Username: ghost1372" />
                <TextBox Name="txtRepo"
                         PlaceholderText="Github Repository: SettingsUI" />
                <TextBlock Name="txtReleaseUrl" />
                <TextBlock Name="txtCreatedAt" />
                <TextBlock Name="txtPublishedAt" />
                <TextBlock Name="txtIsPreRelease" />
                <TextBlock Name="txtTagName" />
                <TextBlock Name="txtChangelog" />
                <ListView Name="listView" />
            </StackPanel>
        </wui:SettingsPageControl.ModuleContent>
    </wui:SettingsPageControl>
</Page>
